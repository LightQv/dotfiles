# Theme
theme = catppuccin-mocha
background-opacity = 0.9
background-blur = true
# active-split-divider-color = #74c7ec
split-divider-color = #313244
window-padding-x = 6
window-padding-y = 6
# window-titlebar-background = #cba6f7
unfocused-split-opacity = 0.5


# Keyboard shortcuts
keybind = ctrl+a>c=copy_to_clipboard
keybind = ctrl+a>v=paste_from_clipboard

keybind = ctrl+a>cmd+t=new_tab
keybind = ctrl+a>cmd+shift+t=close_tab

keybind = ctrl+a>cmd+shift+h=new_split:left
keybind = ctrl+a>cmd+shift+j=new_split:down
keybind = ctrl+a>cmd+shift+k=new_split:up
keybind = ctrl+a>cmd+shift+l=new_split:right

keybind = ctrl+a>cmd+h=goto_split:left
keybind = ctrl+a>cmd+j=goto_split:down
keybind = ctrl+a>cmd+k=goto_split:up
keybind = ctrl+a>cmd+l=goto_split:right

keybind = ctrl+a>cmd+p=goto_split:previous
keybind = ctrl+a>cmd+n=goto_split:next

keybind = ctrl+a>cmd+backspace=close_surface